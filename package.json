{
  "name": "@riotprompt/execution-openai",
  "version": "1.0.1-dev.0",
  "description": "OpenAI provider for execution - implements Provider interface",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "vite build",
    "test": "vitest run --coverage",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "precommit": "npm run build && npm run lint && npm run test",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "llm",
    "openai",
    "gpt",
    "execution",
    "provider"
