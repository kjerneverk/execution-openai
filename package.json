  "author": "Tim O'Brien <tobrien@discursive.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kjerneverk/execution-openai"
  },
  "dependencies": {
    "@theunwalked/offrecord": "^0.0.1",
    "@theunwalked/spotclean": "^0.0.3",
    "openai": "^4.103.0",
    "tiktoken": "^1.0.21"
  },
  "devDependencies": {
    "@types/node": "^25.0.6",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.28.0",
    "globals": "^16.2.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.4",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  }
